{
    // now try multiple elevators AND multiple floors, monitoring direction of elevators
    init: function(elevators, floors) {
        var numElevators = elevators.length;
        var numFloors = floors.length;
        var elNum = 0;
        var flNum = 0;
        console.log("Floors: " + numFloors + " - Elevators:" + numElevators);
        
        for (elNum = 0; elNum < numElevators; elNum++)
        {
            // Button pressed inside elevator? Send elevator to that floor
            elevators[elNum].on("floor_button_pressed", function(floor) {
                 this.goToFloor(floor);
            });
            // Elevator idle (has no more queued destinations)? Go to ground floor
            elevators[elNum].on("idle", function() {
                this.goToFloor(0);
            });
        }
       
        for (flNum = 0; flNum < numFloors; flNum++)
        {
            var floor = floors[flNum];
            // Button pressed on a floor? If an elevator is going to pass in the correct direction, stop at that floor
            floor.on("up_button_pressed", function() {
                for (var el = 0; el < numElevators; el++) {
                    if (elevators[el].destinationDirection == "up") { elevators[el].goToFloor(floor.floorNum()); }
                }
            });
            floor.on("down_button_pressed", function() {
                for (var el = 0; el < numElevators; el++) {
                    if (elevators[el].destinationDirection == "down") { elevators[el].goToFloor(floor.floorNum()); }
                }
            });
        }

    },
    update: function(dt, elevators, floors) {
        // We normally don't need to do anything here
    }
}
